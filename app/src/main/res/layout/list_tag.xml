<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKU:"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/sku_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sku"
            android:text="CXPDFSGDS121255DG"
            android:textColor="#000000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sku"
            android:text="数量:"
            android:textColor="@color/qmui_config_color_red"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/skucount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sku_id"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/shuliang"
            android:text="152"
            android:textColor="@color/qmui_config_color_red"
            android:textSize="18dp" />

    </RelativeLayout>

</LinearLayout>